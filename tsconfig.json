{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "declaration": false,
    "removeComments": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "types/*": ["types/*"],
      "src/*": ["src/*"],
      "Client": ["src/Client"],
      "cluster/*": ["src/cluster/*"],
    }
  },  
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}